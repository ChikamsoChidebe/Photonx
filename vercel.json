{
  "name": "photonx",
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "PhotonX",
    "NEXT_PUBLIC_CHAIN_ID": "1",
    "NEXT_PUBLIC_ENABLE_TESTNETS": "true"
  },
  "functions": {
    "apps/web/src/pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}